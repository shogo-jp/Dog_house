<section class="hero is-dark">
  <div class="hero-body">
    <div class="container">
      <h1 class="title">
        Dog profile
      </h1>
    </div>
  </div>
</section>


<section class="section">
  <div class="container">
    <div class="columns is-centered">
      <div class="column is-6">
        <%= form_for @dog do |f| %>
          <div class="field">
            <%= f.label :title, "タイトル", class: "label" %>
            <%= f.text_field :title, class: "input" %>
          </div>

          <div class="field">
            <%= f.label :body, "キャプション", class: "label" %>
            <%= f.text_area :body, class: "input" %>
          </div>

          <div class="field">
            <%= f.label :image, "写真", class: "label" %>
            <%= f.attachment_field :image, class: "input" %>
          </div>

          <%= f.submit "新規投稿", class: "button is-primary" %>

        <% end %>
      </div>
    </div>
  </div>
</section>
